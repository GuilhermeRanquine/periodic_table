{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++20",
                "-I", "${workspaceFolder}/include/third_party",                     // ‚Üê adiciona include/
                "-I", "${workspaceFolder}/Core/include",
                "-I", "${workspaceFolder}/App/include",
                "App/src/main.cpp",
                "App/src/Tabela.cpp",
                "Core/src/Elemento.cpp",
                "-o", "build/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}